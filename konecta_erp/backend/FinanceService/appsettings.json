{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=Konecta_Finance;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "JwtSettings": {
    "Issuer": "KonectaERP",
    "Audience": "KonectaERPUsers",
    "JwksUri": "http://localhost:7280/.well-known/jwks.json",
    "RequireHttpsMetadata": false,
    "CacheDurationMinutes": 15
  },
  "Consul": {
    "Host": "http://localhost:8500"
  },
  "ServiceConfig": {
    "ServiceName": "finance-service",
    "Host": "host.docker.internal",
    "Port": 5003,
    "RegisterWithConsul": true,
    "FailFast": false
  },
  "RabbitMq": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "Exchange": "konecta.erp",
    "CompensationEventsQueue": "finance.compensation.events",
    "CompensationProvisionedRoutingKey": "finance.compensation.provisioned",
    "CompensationBonusesRoutingKey": "finance.compensation.bonuses",
    "CompensationDeductionsRoutingKey": "finance.compensation.deductions"
  },
  "JwtSettings": {
    "Issuer": "KonectaERP",
    "Audience": "KonectaERPUsers",
    "JwksUri": "http://localhost:7280/.well-known/jwks.json",
    "RequireHttpsMetadata": false,
    "CacheDurationMinutes": 15
  },
  "Spring": {
    "Application": {
      "Name": "finance-service"
    },
    "Cloud": {
      "Config": {
        "Uri": "http://localhost:8888",
        "FailFast": false
      }
    }
  }
}
